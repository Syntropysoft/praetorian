{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "testRunner": "jest",
  "coverageAnalysis": "perTest",
  "jest": {
    "configFile": "jest.config.js"
  },
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/*.config.*",
    "!src/cli/templates/**"
  ],
  "timeoutMS": 15000,
  "concurrency": 1,
  "thresholds": {
    "high": 80,
    "low": 40,
    "break": 50
  }
} 