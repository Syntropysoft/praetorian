{
  "api": {
    "name": "my-api",
    "version": "1.0.0",
    "port": 3000,
    "host": "0.0.0.0"
  },
  "database": {
    "url": "${DATABASE_URL}",
    "pool": {
      "min": 2,
      "max": 10,
      "acquireTimeoutMillis": 30000,
      "createTimeoutMillis": 30000,
      "destroyTimeoutMillis": 5000,
      "idleTimeoutMillis": 30000,
      "reapIntervalMillis": 1000,
      "createRetryIntervalMillis": 200
    }
  },
  "security": {
    "jwt": {
      "secret": "${JWT_SECRET}",
      "expiresIn": "24h",
      "refreshExpiresIn": "7d"
    },
    "bcrypt": {
      "rounds": 12
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100,
      "message": "Too many requests from this IP"
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "transports": ["console", "file"],
    "file": {
      "filename": "logs/app.log",
      "maxsize": 10485760,
      "maxFiles": 5
    }
  },
  "monitoring": {
    "enabled": true,
    "metrics": {
      "enabled": true,
      "port": 9090
    },
    "health": {
      "enabled": true,
      "path": "/health"
    }
  }
} 